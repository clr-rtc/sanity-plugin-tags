{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2015",
    "moduleResolution": "node",
    "declaration": true,
    "emitDeclarationOnly": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "noErrorTruncation": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "outDir": "lib",
    "jsx": "react",
    "lib": ["ESNext", "ES2021", "ES2015", "DOM"],
    "strict": true
  },
  "include": ["./node_modules/@sanity/base/types/**/*.ts", "src/**/*.ts", "src/**/*.tsx"]
}
